<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- AppCompat -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@android:color/holo_red_light</item>

        <!-- Android -->
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">#888</item>

        <!-- Custom -->
        <item name="colorInputField">@color/colorInputField</item>
        <item name="colorText">@color/colorText</item>
        <item name="colorTextTitle">@color/colorPrimary</item>
        <item name="colorLabel">@color/colorLabel</item>
        <item name="colorIcon">@color/colorAccent</item>
        <item name="colorIconNoFocus">@color/colorInputField</item>
        <item name="colorListDivider">#BDBDBD</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <!-- AppCompat -->
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorAccent_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@android:color/holo_red_dark</item>

        <!-- Android -->
        <item name="android:textColor">#FFF</item>

        <!-- Custom -->
        <item name="colorInputField">@color/colorInputField</item>
        <item name="colorText">@color/colorText</item>
        <item name="colorTextTitle">@color/colorPrimary_dark</item>
        <item name="colorLabel">@color/colorLabel</item>
        <item name="colorIcon">@color/colorAccent</item>
        <item name="colorIconNoFocus">@color/colorInputField</item>
        <item name="colorListDivider">#8888</item>
    </style>

    <style name="AppTheme.Dark.Amoled" parent="AppTheme.Dark">
        <!-- AppCompat -->
        <item name="colorPrimaryDark">@color/colorAccent_dark</item>

        <!-- Android -->
        <item name="android:windowBackground">@color/amoled_dark</item>
    </style>

    <style name="AppTheme.ToolBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Into" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Dialog" parent="android:Theme.Material.Dialog">
        <item name="colorAccent">@android:color/transparent</item>
    </style>
</resources>
